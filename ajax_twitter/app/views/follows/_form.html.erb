<%# if current_user.follows?(user) %>
  <%#= button_to 'Unfollow', user_follow_url(user), method: :delete %>
<%# else %>
  <%#= button_to 'Follow', user_follow_url(user), method: :post %>
<%# end %>

<% if user.followers.include? (current_user) %>
  <% follow_state = "followed" %>
<% else %>
  <% follow_state = "unfollowed" %>
<% end %>

<button data-user-id="<%= user.id %>" data-initial-follow-state="<%= follow_state %>" class="follow-toggle" type="button" name="button"></button>
